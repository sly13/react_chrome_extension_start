{
  "manifest_version": 2,
  "name": "Trade Helper for Binance",
  "description":
    "Add the USD value to the output of the BTC value column on Binance. Also you can convert BTC to USD at the Binance rate.",
  "version": "1.4",
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["materialize/js/jquery-3.3.1.min.js", "content.js"],
      "css": ["content.css"]
    }
  ],
  "browser_action": {
    "default_popup": "popup.html",
    "default_icon": "icons/icon_64.png",
    "default_title": "Trade Helper for Binance"
  },
  "permissions": ["tabs"],
  "icons": { "128": "icons/icon_128.png" }
}
